{
  "name": "aggregator-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build --tsc",
    "webpack": "nest build --watch --webpack",
    "format": "prettier --write \"apps/api-hub/src/**/*.ts\" \"**/test/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "export NODE_ENV=production && node dist/apps/api-hub/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:api": "newman run postman/precomposer_api.postman_collection.json --environment postman/precomposer_api.postman_environment.json ",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "generate": "npm run generate:aggregator && npm run generate:priceService",
    "generate:aggregator": "ts-node apps/api-hub/src/generate-typings.ts",
    "generate:priceService": "graphql-codegen --config apps/api-hub/src/prices/codegen.yml"
  },
  "dependencies": {
    "@apollo/client": "^3.7.10",
    "@apollo/gateway": "^2.4.0",
    "@apollo/subgraph": "^2.4.0",
    "@commercetools/api-request-builder": "^6.0.0",
    "@commercetools/platform-sdk": "^4.4.0",
    "@commercetools/sdk-auth": "^4.0.1",
    "@commercetools/sdk-client-v2": "^2.1.1",
    "@commercetools/sdk-middleware-auth": "^7.0.1",
    "@commercetools/sdk-middleware-http": "^7.0.1",
    "@commercetools/sdk-middleware-logger": "^3.0.0",
    "@godaddy/terminus": "^4.11.2",
    "@nest-middlewares/cookie-parser": "^7.0.1",
    "@nestjs/apollo": "^11.0.4",
    "@nestjs/axios": "^2.0.0",
    "@nestjs/common": "^9.3.9",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "^9.3.9",
    "@nestjs/graphql": "^11.0.4",
    "@nestjs/platform-express": "^9.3.9",
    "@nestjs/terminus": "^9.1.4",
    "@sideway/formula": "^3.0.1",
    "@types/cls-hooked": "^4.3.3",
    "@types/express-serve-static-core": "^4.17.33",
    "@types/js-yaml": "^4.0.5",
    "algoliasearch": "^4.19.1",
    "apollo-server-express": "^3.11.1",
    "cache-manager": "^5.1.4",
    "cls-hooked": "^4.2.2",
    "contentful": "^9.2.20",
    "contentful-management": "~10.27.2",
    "cookie-parser": "^1.4.6",
    "gelf-transformer": "^2.1.0",
    "graphql": "^16.6.0",
    "graphql-parse-resolve-info": "^4.13.0",
    "graphql-tools": "^8.3.18",
    "graphql-type-json": "^0.3.2",
    "helmet": "^6.0.1",
    "hot-shots": "^9.3.0",
    "joi": "^17.8.3",
    "js-yaml": "^4.1.0",
    "nestjs-graphql-tools": "^0.7.10",
    "nestjs-i18n": "^10.2.6",
    "nestjs-pino": "~3.1.2",
    "pino-http": "^8.3.3",
    "pino-pretty": "^9.4.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^4.1.2",
    "rxjs": "^7.8.0",
    "storyblok-js-client": "^5.6.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.16.4",
    "@graphql-codegen/typescript": "^2.8.7",
    "@graphql-codegen/typescript-operations": "^2.5.12",
    "@nestjs/cli": "^9.3.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.2.1",
    "@types/express": "^4.17.16",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.18",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "cross-fetch": "^3.1.5",
    "dependency-cruiser": "^12.6.0",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "jest": "^29.4.0",
    "newman": "^5.3.2",
    "prettier": "2.8.3",
    "readdirp": "^3.6.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.0.5",
    "ts-loader": "^9.4.2",
    "ts-morph": "^17.0.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4",
    "webpack-dev-server": "^4.11.1",
    "webpack-node-externals": "^3.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "rootDir": ".",
    "moduleNameMapper": {
      "src/(.*)": "<rootDir>/$1",
      "^@precomposer/port-definitions(|/.*)$": "<rootDir>/libs/port-definitions/src/$1"
    },
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/api-hub/src",
      "<rootDir>/libs/"
    ]
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5",
    "singleQuote": true
  }
}